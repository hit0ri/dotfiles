    colors = true
    color_good = "#a3be8c"
    color_bad = "#d08770"
    interval = 2
}

order += "ethernet br0"
order += "disk /"
order += "cpu_usage"
order += "volume master"
order += "tztime local"

ethernet br0 {
# if you use %speed, i3status requires root privileges
    format_up = "ðŸ–§ %ip (%speed)"
    format_down = "E: down"
}

