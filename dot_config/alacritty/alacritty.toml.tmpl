[general]
import = ["~/.config/alacritty/themes/{{ (index .theme .current_theme).alacritty }}.toml"]

[window]
dimensions = { columns = 110, lines = 26 }
padding = { x = 0, y = 0 }
startup_mode = "Maximized"
option_as_alt = "OnlyLeft"
decorations_theme_variant = "Dark"

[scrolling]
history = 50000

[font]
normal = { family = "{{ .font_name }}" }
size = {{ .font_size }}.0
builtin_box_drawing = false

[env]
TERM = "xterm-256color"

[mouse]
hide_when_typing = true
