[user]
    email = hitori.gm@gmail.com
    name = hitori

[push]
    default = simple

[alias]
    co = checkout
    ci = commit
    st = status -s
    br = branch
    type = cat-file -t
    dump = cat-file -p
    lg = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'

[color]
    branch = auto
    diff = auto
    status = auto

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = cyan
